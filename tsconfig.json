{
  "compilerOptions": {
    "target": "ESNext",
    "sourceMap": true,
    "allowJs": true,
    "removeComments": true,
    "strict": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "outDir": "dist",
    "isolatedModules": true,
    "declaration": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
